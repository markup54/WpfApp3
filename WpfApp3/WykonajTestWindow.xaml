<Window x:Class="WpfApp3.WykonajTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Rozwiązywanie teściku" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.ColumnSpan="2"
            FontSize="40"
            x:Name="trescPytanie_textblock"
            >
            Tresc pytanie</TextBlock>
        <Button Grid.Row="1"
                Margin="50"
                FontSize="40"
                x:Name="tak_button"
                Click="tak_button_Click"
                >TAK </Button>
        <Button Grid.Row="1"
                Grid.Column="1"
                Margin="50"
                FontSize="40"
                x:Name="nie_button"
                Click="nie_button_Click"
                >NIE</Button>
    </Grid>
</Window>
