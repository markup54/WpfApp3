<Window x:Class="WpfApp3.DodajPytanieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="DodajPytanieWindow" Height="350" Width="500">
    <StackPanel>
        <Label>Podaj treść pytania</Label>
        <TextBox x:Name="Tresc_pytania"/>
        <Label>Wybierz poprawną odpowiedź</Label>
        <RadioButton GroupName="odp" x:Name="odp_tak" IsChecked="True">tak</RadioButton>
        <RadioButton GroupName="odp" x:Name="odp_nie">nie</RadioButton>
        <Button Click="Button_Click">Dodaj pytanie</Button>
    </StackPanel>
</Window>
